<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_id"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/ticket_img_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#2d2d2d"
                android:scaleType="centerCrop"
                android:translationY="-10dp"
                app:layout_constraintBottom_toTopOf="@id/ticket_name_id"
                app:layout_constraintDimensionRatio="H,4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.019" />

            <TextView
                android:id="@+id/ticket_name_id"
                android:layout_width="189dp"
                android:layout_height="49dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/productsansregular"
                android:gravity="center|start|center_horizontal"
                android:lines="2"
                android:maxLines="2"
                android:text="Ticket Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ticket_category_id"
                android:layout_width="107dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center|right"
                android:maxLines="1"
                android:text="Category"
                android:textAlignment="textEnd"
                android:textColor="#2d2d2d"
                android:textSize="14dp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toTopOf="@+id/ticket_price_id"
                app:layout_constraintStart_toEndOf="@+id/ticket_name_id" />

            <TextView
                android:id="@+id/ticket_price_id"
                android:layout_width="107dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Price"
                android:textAlignment="textEnd"
                android:textColor="#2d2d2d"
                android:textSize="14dp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ticket_name_id" />

            <ImageView
                android:id="@+id/cat_img"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/ticket_price_id"
                app:layout_constraintStart_toEndOf="@+id/ticket_category_id"
                app:layout_constraintTop_toTopOf="@+id/ticket_category_id" />

            <ImageView
                android:id="@+id/euro_img"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_coins"
                app:layout_constraintStart_toEndOf="@+id/ticket_price_id"
                app:layout_constraintTop_toBottomOf="@+id/cat_img" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>