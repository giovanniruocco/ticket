<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TicketActivity">

    <ImageView
        android:id="@+id/ticketthumbnail"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/categorythumbnail"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/ticketthumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticketthumbnail"
        app:layout_constraintVertical_bias="0.45"
        />


    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/productsansregular"
        android:text="Ticket Name"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/categorythumbnail"
        app:layout_constraintTop_toBottomOf="@+id/ticketthumbnail" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/productsansregular"
        android:text="Category"
        android:textSize="20dp"
        android:textStyle="bold|italic"

        app:layout_constraintStart_toEndOf="@+id/categorythumbnail"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/productsansregular"
        android:text="Price"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/categorythumbnail"
        app:layout_constraintTop_toBottomOf="@+id/textCategory" />




    <TextView
        android:id="@+id/textCity"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/productsansregular"
        android:text="City"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textPrice"
        app:layout_constraintTop_toBottomOf="@+id/textPrice" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/productsansregular"
        android:scrollHorizontally="false"
        android:fillViewport="true"
        android:text="Description"
        android:textSize="24dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtRegion"
        app:layout_constraintTop_toBottomOf="@+id/txtRegion" />

    <TextView
        android:id="@+id/txtRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/productsansregular"
        android:text="Region"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textCity"
        app:layout_constraintTop_toBottomOf="@+id/textCity" />


    <Button
        android:id="@+id/email"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/Rosso"
        android:fontFamily="@font/productsansbold"
        android:text="Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chiama"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chiama"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:background="#49b675"
        android:fontFamily="@font/productsansbold"
        android:text="Call"

        app:layout_constraintBaseline_toBaselineOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/email" />


    />

</androidx.constraintlayout.widget.ConstraintLayout>
