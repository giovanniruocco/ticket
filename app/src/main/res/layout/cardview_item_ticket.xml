<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/ticket_img_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            android:translationY="-10dp"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintHorizontal_bias="0.0"
            cardview:layout_constraintBottom_toTopOf="@id/ticket_name_id"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ticket_name_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:fontFamily="@font/productsansregular"
            android:gravity="center|start|center_horizontal"
            android:lines="2"
            android:maxLines="2"
            android:text="Ticket Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="19dp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toStartOf="@+id/ticket_category_id"
            cardview:layout_constraintStart_toStartOf="@+id/ticket_img_id"
            cardview:layout_constraintTop_toBottomOf="@id/ticket_img_id" />

        <TextView
            android:id="@+id/ticket_category_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Breed"
            android:textColor="#2d2d2d"
            android:textSize="14dp"
            android:textStyle="normal|bold|italic"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="@+id/ticket_img_id"
            cardview:layout_constraintStart_toEndOf="@+id/ticket_name_id"
            cardview:layout_constraintTop_toTopOf="@+id/ticket_name_id"
            cardview:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>